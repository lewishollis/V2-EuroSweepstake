  <title>Leaderboard</title>
</head>
<body>
  <div class="leaderboard-container">
    <div class="navigation">
      <a href="<%= matches_path %>" class="button">Go to Matches</a>
      <a href="<%= leaderboard_path(:show) %>" class="button">Go to Leaderboard</a>
    </div>
    <h1>Leaderboard</h1>
    <% @groups.each do |group| %>
      <div class="leaderboard-card group-card">
        <div class="leaderboard-header">
          <h2>Group <%= group.name %></h2>
          <p>Friend: <%= group.friend&.name || "No Friend Assigned" %></p>
          <% if group.friend&.profile_picture_url.present? %>
      <%= image_tag(group.friend.profile_picture_url, alt: group.friend.name) %>
      <%end%>
          <p>Multiplier: <%= group.multiplier %>
        </div>
        <div class="team-list">
          <% total_points = group.total_points %>
          <% group.teams.each do |team| %>
            <div class="team">
              <p><%= team.name %> - <%= team.points %></p>
              <%= form_with url: update_team_progress_leaderboard_path(team), method: :patch, local: true do %>
                <%= check_box_tag :progressed, team.id, team.progressed?, onchange: 'this.form.submit();' %>
              <% end %>
            </div>
          <% end %>
        </div>
        <p class="total-points">Total Points: <%= total_points %></p>
      </div>
    <% end %>
  </div>
</body>
</html>
