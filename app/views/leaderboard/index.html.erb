<!-- app/views/leaderboard/index.html.erb -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Leaderboard</title>
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <div class="leaderboard-container">
    <h1>Leaderboard</h1>
    <% @groups.each do |group| %>
      <div class="group-card">
        <h2>Group <%= group.name %></h2>
        <p>Friend: <%= group.friend&.name || "No Friend Assigned" %></p>
        <% total_points = group.total_points %>
        <% group.teams.each do |team| %>
          <p>
            <%= team.name %> - <%= team.points %>
            <%= form_with url: update_team_progress_leaderboard_path(team), method: :patch, local: true do %>
              <%= check_box_tag :progressed, team.id, team.progressed?, onchange: 'this.form.submit();' %>
            <% end %>
          </p>
        <% end %>
        <p>Total Points: <%= total_points %></p>
      </div>
    <% end %>
  </div>
</body>
</html>
